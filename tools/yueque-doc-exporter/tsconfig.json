{
  "compilerOptions": {
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "module": "esnext",
    "target": "es6",
    "sourceMap": false,
    "baseUrl": "./src",
    "importHelpers": true,
    "types": [
      "node",
      "jest"
    ],
    "lib": [
      "dom",
      "es6",
      "es2015",
      "es2015.promise"
    ]
  },
  "include": [
    "./src/**/*",
    "./rollup.config.ts",
    "./rollup.esnext.config.ts",
    "./tests/**/*",
    "./types/**/*.d.ts",
    "../../global.d.ts",
    "node_modules/**/*/types/**/*.d.ts"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "**/*.spec.ts"
  ]
}
